{   
    //Required

    "manifest_version": 2,
    
    "name": "CE list tabs.",
    
    "version": "0.9.0",
    
    // Recommended
        
    "description": "An extension to list and close tabs.",
    
    "icons": { 
        "16": "icon_16x16.png",
        "48": "icon_48x48.png",
        "128": "icon_128x128.png" 
    },
     
    // 
    "browser_action": {
        "default_icon": "icon_19x19.png",
        "default_popup": "popup.html"
    },
    
    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
